    <!--Colocamos esta etiqueta para ordenar los elementos que iran dentro de nuestro programa
    tambien ponemos el margen que llevara-->
    <StackLayout Margin="20,35,20,20">
        
        <!--Colocamos un entry con sus propiedades y este mostrara una entrada de texto donde se podra ingresar una contraseña de usuario-->
        <Entry Placeholder="Usuario"
               MaxLength="10"
               IsSpellCheckEnabled="True"
               IsTextPredictionEnabled="True"
               IsPassword="False"
               Keyboard="Numeric"
               CharacterSpacing="10"
               TextChanged="Entry_TextChanged"
               Completed="Entry_Completed" /> 

    </StackLayout>

