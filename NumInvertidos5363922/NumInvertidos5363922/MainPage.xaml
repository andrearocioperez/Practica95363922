<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NumInvertidos5363922.MainPage"
             BackgroundImageSource="numeros.jpg">

    <!--<Summary
        <Createddate> 30/05/2024 </createddate>
            <company>Instituto Nacional Cantón Lourdes</company>
            <lastmodificationdate> 30/05/2024 </lastmodificationdate>
            <lastmodifierautor>Andrea Rocio Pérez Arriola</lastmodifierautor>
